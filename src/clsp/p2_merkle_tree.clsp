(mod
  (
    MERKLE_ROOT
    puzzle_to_execute
    merkle_proof
    inner_solution
  )
  ; This puzzle takes a merkle root.
  ; The merkle root contains a tree of puzzles that can be executed with the passed in inner_solution

  (include curry_and_treehash.clib)
  (include merkle_utils.clib)
  (include utility_macros.clib)

  (assert (= MERKLE_ROOT (simplify_merkle_proof (sha256tree puzzle_to_execute) merkle_proof))
    ; then
    (a puzzle_to_execute inner_solution)
  )


)
